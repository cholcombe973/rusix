enum ResultType: byte {
	Ok = 0,
	Err
}

table OpResult {
	result:ResultType;
	// error_msg is set if ERR
	errno:int;
	errorMsg:string;
}

table Iatt {
	iaGfid:string;
	iaIno:ulong;
	iaDev:ulong;
	mode:uint;
	iaNlink:uint;
	iaUid:uint;
	iaGid:uint;
	iaRdev:ulong;
	iaSize:ulong;
	iaBlksize:uint;
	iaBlocks:ulong;
	iaAtime:uint;
	iaAtimeNsec:uint;
	iaMtime:uint;
	iaMtimeNsec:uint;
	iaCtime:uint;
	iaCtimeNsec:uint;
}

table StatRequest {
	gfid:string;
	//extraData:[byte];
}

table StatResponse {
	result:OpResult;
	stat:Iatt;
	extraData:[byte];
}

table Operation {
	stat:StatRequest;
}

root_type Operation;
